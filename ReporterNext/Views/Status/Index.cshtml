@{
    ViewData["Title"] = "Status";
    ViewData["Status"] = "ok";
}

<figure>
@switch (ViewData["Status"])
{
    case "ok":
    <svg width="256" height="256" viewBox="0 0 12 16" version="1.1" aria-hidden="true"><path fill-rule="evenodd" d="M12 5l-8 8-4-4 1.5-1.5L4 10l6.5-6.5L12 5z"></path></svg>
    <figcaption>
        <h1>正常稼働中</h1>
        <p>@(ViewData["Description"] ?? "システムが把握している限りでは正常に稼働しています。問題があればご報告下さい。")</p>
    </figcaption>
    <style scoped>*{color:#28a745;fill:#28a745}</style>
    break;
    case "partial":
    <svg width="256" height="256" viewBox="0 0 16 16" version="1.1" aria-hidden="true"><path fill-rule="evenodd" d="M8.893 1.5c-.183-.31-.52-.5-.887-.5s-.703.19-.886.5L.138 13.499a.98.98 0 0 0 0 1.001c.193.31.53.501.886.501h13.964c.367 0 .704-.19.877-.5a1.03 1.03 0 0 0 .01-1.002L8.893 1.5zm.133 11.497H6.987v-2.003h2.039v2.003zm0-3.004H6.987V5.987h2.039v4.006z"></path></svg>
    <figcaption>
        <h1>部分的稼働中</h1>
        <p>@(ViewData["Description"] ?? "システムの一部が稼働していません。詳細に関しては公式アカウントからのツイートをご参照下さい。")</p>
    </figcaption>
    <style scoped>*{color:#a04100;fill:#a04100}</style>
    break;
    case "stop":
    <svg width="256" height="256" viewBox="0 0 12 16" version="1.1" aria-hidden="true"><path fill-rule="evenodd" d="M7.48 8l3.75 3.75-1.48 1.48L6 9.48l-3.75 3.75-1.48-1.48L4.52 8 .77 4.25l1.48-1.48L6 6.52l3.75-3.75 1.48 1.48L7.48 8z"></path></svg>
    <figcaption>
        <h1>停止中</h1>
        <p>@(ViewData["Description"] ?? "システムは諸事情により停止しています。詳細に関しては公式アカウントからのツイートをご参照下さい。")</p>
    </figcaption>
    <style scoped>*{color:#cb2431;fill:#cb2431}</style>
    break;
    case "maintenance":
    <svg width="256" height="256" viewBox="0 0 10 16" version="1.1" aria-hidden="true"><path fill-rule="evenodd" d="M10 7H6l3-7-9 9h4l-3 7 9-9z"></path></svg>
    <figcaption>
        <h1>メンテナンス中</h1>
        <p>@(ViewData["Description"] ?? "システムはメンテナンスのため停止しています。詳細に関しては公式アカウントからのツイートをご参照下さい。")</p>
    </figcaption>
    <style scoped>*{color:#6f42c1;fill:#6f42c1}</style>
    break;
    default:
    <svg width="256" height="256" viewBox="0 0 14 16" version="1.1" aria-hidden="true"><path fill-rule="evenodd" d="M6 10h2v2H6v-2zm4-3.5C10 8.64 8 9 8 9H6c0-.55.45-1 1-1h.5c.28 0 .5-.22.5-.5v-1c0-.28-.22-.5-.5-.5h-1c-.28 0-.5.22-.5.5V7H4c0-1.5 1.5-3 3-3s3 1 3 2.5zM7 2.3c3.14 0 5.7 2.56 5.7 5.7s-2.56 5.7-5.7 5.7A5.71 5.71 0 0 1 1.3 8c0-3.14 2.56-5.7 5.7-5.7zM7 1C3.14 1 0 4.14 0 8s3.14 7 7 7 7-3.14 7-7-3.14-7-7-7z"></path></svg>
    <figcaption>
        <h1>不明</h1>
        <p>@(ViewData["Description"] ?? "システムが現在の状態を把握できませんでした。問題があればご報告下さい。")</p>
    </figcaption>
    <style scoped>*{color:#586069;fill:#586069}</style>
    break;
}
</figure>
